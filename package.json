{
  "devDependencies": {
    "@types/next": "^8.0.6",
    "@types/react": "^16.9.2",
    "@types/react-dom": "^16.9.0",
    "@typescript-eslint/eslint-plugin": "^2.2.0",
    "@typescript-eslint/parser": "^2.2.0",
    "@zeit/next-typescript": "^1.1.1",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog-ja": "^0.0.2",
    "eslint": "^6.4.0",
    "husky": "^3.0.5",
    "lint-staged": "^9.2.5",
    "ts-node": "^8.4.1",
    "typescript": "^4.2.3"
  },
  "scripts": {
    "commit": "git-cz",
    "dev": "next",
    "start": "next start"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog-ja"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "next": "8.1.0",
    "react": "^16.9.0",
    "react-dom": "^16.9.0"
  }
}
